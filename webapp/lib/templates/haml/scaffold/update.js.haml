- if @<%= singular_table_name %>.errors.empty?
  $('tr#<%= singular_table_name %>_#{@<%= singular_table_name %>.id}').replaceWith("#{j(render('<%= singular_table_name %>', <%= singular_table_name %>: @<%= singular_table_name %>))}");
  $.fancybox.close();
- else
  alert("#{@<%= singular_table_name %>.errors.full_messages.join('\n')}");
