%h3.text-muted Title

= simple_form_for :app_message, html: { class: 'form-horizontal', role: 'form', id: 'app_form' },
  defaults: { input_html: { class: 'form-control' }, label_html: { class: 'col-lg-3' } } do |f|

  = f.input :user_phones, as: :text, label: 'users', input_html: { rows: 5 }, hint: 'one mobile phone per line, leave it empty to send to all users'
  = f.input :subject, label: 'subject'
  = f.input :content, as: :text, label: 'content', input_html: { rows: 5 }

  .form-group
    .col-lg-6.col-lg-offset-3
      = f.submit 'Send', class: 'btn-danger'

:javascript
  $(function() {
    $('#app_form').submit(function() {
      if ($('#app_message_user_phones').val().length == 0) {
        return confirm('Are you sure to send to all users?');
      }
    });
  });
