%h3.text-muted.pull-left= t('headline.index', record: Medication.model_name.human)
= form_tag(admin_panel_medications_path, method: :get, class: 'pull-right form-inline text-right', style: 'width: 70%;') do
  %div
    .form-group{style: 'width: 400px;'}
      = label_tag(:keyword, 'Email address', class: 'sr-only')
      = text_field_tag(:keyword, params[:keyword], placeholder: "Enter medication name", class: 'form-control')
    = submit_tag(t('button.search'), class: 'btn btn-info')
    = submit_tag t('admin_panel.users.index.export_excel'), class: 'btn btn-success'
  .col-lg-8.pull-right.vendor_id_range
    .input-group
      %span.input-group-addon ID form:
      = text_field_tag :vendor_id_from, params[:vendor_id_from], class: 'form-control'
      %span.input-group-addon to
      = text_field_tag :vendor_id_to, params[:vendor_id_to], class: 'form-control'
%table.table.table-striped#medication_table
  %thead
    %tr
      %th ID
      %th= Medication.human_attribute_name(:name)
      %th= Medication.human_attribute_name(:code)
      %th= Medication.human_attribute_name(:companies)
      %th= Medication.human_attribute_name(:avg_rating)
      %th{ width: 110 }

  %tbody= render @medications

= paginate @medications

%div= link_to t('button.create', record: Medication.model_name.human), new_admin_panel_medication_path, class: 'btn btn-success various fancybox.ajax'
