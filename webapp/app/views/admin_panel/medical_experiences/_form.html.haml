= simple_form_for([:admin_panel, @medical_experience], remote: true, html: {class: 'form-horizontal', role: 'form' }, defaults: { input_html: { class: 'form-control'}, label_html: { class: 'col-lg-2' } }) do |f|
  = f.error_notification
  / = f.association :referral_code
  = f.input :network_visible
  = f.input :behalf
  .form-group
    .col-lg-offset-2
      = f.button :submit, class: 'btn btn-primary'
