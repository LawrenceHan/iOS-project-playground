%h3.text-muted= t('headline.edit', record: Survey::Survey.model_name.human)
%hr

= simple_form_for([:admin_panel, @survey], url: admin_panel_surveys_path, remote: true, html: { class: 'form-horizontal', role: 'form' }, defaults: { input_html: { class: 'form-control'}, label_html: { class: 'col-lg-2' } }) do |f|
  = f.error_notification
  = f.input :title
  = f.input :type, collection: %w(Survey::B2cSurvey Survey::B2bSurvey)

  .form-group
    .col-lg-offset-2
      = f.button :submit, class: 'btn btn-primary'
