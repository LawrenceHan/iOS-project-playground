!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{ href: asset_path('favicon.ico'), rel: "shortcut icon"}/
    %title Signin CareVoice
    = stylesheet_link_tag 'signin', media: "all", "data-turbolinks-track" => true
    /[if lt IE 9]
      = javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js'
  %body
    .container
      = form_tag admin_panel_login_path, class: 'form-signin' do
        %h2.form-signin-heading Please sign in
        - if alert
          .alert.alert-danger= alert
        = email_field_tag :email, nil, placeholder: 'Email address', autofocus: true, class: 'form-control'
        = password_field_tag :password, nil, placeholder: 'Password', class: 'form-control'
        %label.checkbox
          = check_box_tag :remember_me
          Remember me
        = submit_tag ' Sign in ', class: 'btn btn-lg btn-primary btn-block'
