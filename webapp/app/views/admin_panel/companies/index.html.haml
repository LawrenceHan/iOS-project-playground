%h3.text-muted.pull-left= t('headline.index', record: Company.model_name.human)
= form_tag(admin_panel_companies_path, method: :get, class: 'pull-right form-inline text-right', style: 'width: 70%;') do
  %div
    .form-group{style: 'width: 392px;'}
      = label_tag(:keyword, 'Manufacturer name', class: 'sr-only')
      = text_field_tag(:keyword, params[:keyword], placeholder: "Enter Manufacturer name", class: 'form-control')
    = submit_tag(t('button.search'), class: 'btn btn-info')
    = submit_tag t('admin_panel.users.index.export_excel'), class: 'btn btn-success'
  .col-lg-9.pull-right.vendor_id_range
    .input-group
      %span.input-group-addon ID form:
      = text_field_tag :vendor_id_from, params[:vendor_id_from], class: 'form-control'
      %span.input-group-addon to
      = text_field_tag :vendor_id_to, params[:vendor_id_to], class: 'form-control'

%table.table.table-striped#company_table
  %thead
    %tr
      %th ID
      %th= Company.human_attribute_name(:name)
      %th= Company.human_attribute_name(:created_at)
      %th{ width: 100 }

  %tbody= render @companies

= paginate @companies
%div= link_to t('button.create', record: Company.model_name.human), new_admin_panel_company_path, class: 'btn btn-success various fancybox.ajax'
