!!! 5
%html
  %head
    %title Survey
    %meta{charset: "utf-8"}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %meta{'http-equiv' => 'content-type', content: 'text/html; charset=utf-8'}

    = stylesheet_link_tag 'survey/application'

  %body
    #main.container-narrow{ data: {locale: I18n.locale} }
      = yield
      %hr
      .footer
        %p
          Powered by &nbsp;
          = image_tag "tcv-logo.png", alt: "The CareVoice logo", class: "logo"
          &nbsp;
          = link_to '康语 - The CareVoice', "http://www.thecarevoice.com/", target: "_blank", class: "small"
    = javascript_include_tag 'survey/application'

    - if APP_CONFIG[:ga]
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '#{APP_CONFIG[:ga]}', 'auto');
        ga('send', 'pageview');
