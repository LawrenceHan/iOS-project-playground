!!!
/[if IEMobile 7 ] <html class="no-js iem7">
/ [if (gt IEMobile 7)|!(IEMobile)]><!
%html.no-js
  / <![endif]
  %head
    %meta{charset: "utf-8"}/
    %title= page_title
    %meta{content: "", name: "description"}/
    %meta{content: "True", name: "HandheldFriendly"}/
    %meta{content: "320", name: "MobileOptimized"}/
    %meta{content: "minimal-ui, width=device-width, user-scalable=no", name: "viewport"}/
    %meta{content: "on", "http-equiv" => "cleartype"}/

    / Tile icon for Win8 (144x144 + tile color)
    %meta{content: "img/touch/apple-touch-icon-144x144-precomposed.png", name: "msapplication-TileImage"}/
    %meta{content: "#222222", name: "msapplication-TileColor"}/
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}/

    = stylesheet_link_tag 'mobile/application'

    = yield :head
  %body{class: css_namespace}
    = render 'mobile/shared/modal'

    .page
      - [:info, :warning, :error].each do |level|
        - if flash[level]
          .flash{class: level}
            - case flash[level]
            - when String
              = flash[level]
            - when Array
              %ul
                - flash[level].each do |line|
                  %li= line

            // 'this' in 'href' refers to 'window', while in 'onclick', it refers to the element
            %a.close{ href: 'javascript:', onclick: '$(this).closest(".flash").remove()'} &times;
      = yield
      = render 'mobile/shared/left_menu'

    = javascript_include_tag 'mobile/application'
    = yield :javascript

    - if APP_CONFIG[:ga]
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '#{APP_CONFIG[:ga]}', 'auto');
        ga('send', 'pageview');