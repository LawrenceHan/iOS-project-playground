body {
  padding-top: 20px;
  padding-bottom: 40px;
}
/* Custom container */
.container-narrow {
  margin: 0 auto;
  width: 700px;
  @media (min-width: 740px) {
    width: 700px;
  }
  @media (max-width: 739px) {
    width: auto;
    padding: 0 20px;
  }
}
.survey-bar {
  margin: 30px 0;
  height: 2px;
  &.default-bar {
    background-image: url(<%= asset_path 'survey_bar.png' %>);
    height: 3px;
  }
}
.masthead {
  a {
    margin: 10px;
  }
  .logo {
    background-image: url(<%= asset_path 'tcv-logo-lg.png' %>);
    background-size: 100%;
    width: 140px;
    height: 60px;
  }
}
/* Main marketing message and sign up button */
#header p {
  margin: 20px 0;
  text-align: center;
}
/* Supporting marketing content */
.marketing p + h4 {
  margin-top: 28px;
  *margin-top: 14px;
}
#survey {
  form {
    $width: 300px;
    input {
      width: $width;
    }
    select {
      width: $width + 15;
    }
    legend {
      margin-top: 50px;
    }
    label {
      font-weight: bold;
      color: #333;
    }
    label.error {
      color: red;
      display: block;
    }
    .hint {
      color: #999;
      margin-bottom: 5px;
    }
    .title {
      text-align: center;
      margin-bottom: 50px 0;
    }
    input[type=checkbox] {
      width: auto;
      margin-right: 10px;
    }
    textarea {
      width: 97%;
      height: 130px;
    }
    .other_value {
      margin-top: 10px;
    }
    /* Large desktop */
    @media (min-width: 740px) {
      padding: 0 120px;
    }
    /* Landscape phone to portrait tablet */
    @media (max-width: 739px) {
      padding: 0 60px;
    }
    /* Landscape phones and down */
    @media (max-width: 480px) {
      $width: 250px;
      input, textarea {
        width: $width;
      }
      select {
        width: $width + 15;
      }
      padding: 0 0;
    }
  }
  .form-horizontal .controls {
    margin-left: 320px;
    *margin-left: 0px;
    *padding-left: 20px;
    *display: inline-block;
  }
  .form-horizontal .control-label {
    width: 300px;
  }
}
#term {
  padding: 6px;
  border: solid 1px #ddd;
  height: 200px;
  overflow: scroll;
  overflow-x: hidden;
  #tos {
    margin: 15px;
  }
}
#slogan {
  margin-top: 20px;
  font-size: 16px;
}
#loading img {
  margin: auto;
  display: block;
}
#done {
  text-align: center;
}
.footer {
  .logo {
    height: 20px;
  }
}
